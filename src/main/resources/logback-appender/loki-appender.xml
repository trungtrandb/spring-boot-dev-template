<included>
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <batchMaxBytes>65536</batchMaxBytes>
        <http>
            <!--            <url>https://logs-prod-017.grafana.net/loki/api/v1/push</url>-->
            <url>http://${ip}:3100/loki/api/v1/push</url>
            <auth>
                <username>359620</username>
                <password>
                    ${LOKI_PASSWORD}
                </password>
            </auth>
            <requestTimeoutMs>15000</requestTimeoutMs>
        </http>
        <format>
            <label>
                <pattern>app=${name},host=${HOSTNAME},level=%level</pattern>
            </label>
            <message>
                <pattern>[%thread] %-5level %logger{36} - %msg %ex</pattern>
            </message>
        </format>
    </appender>
</included>
